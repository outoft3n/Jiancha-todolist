  Container(WebApp, "Web App", "React SPA", "Browser-based UI for task management and admin interface")
  Container(MobileApp, "Mobile App", "Flutter (iOS/Android)", "Mobile UI for task management and sync")
  Container(WebAPI, "Web API", "Python FastAPI (REST JSON)", "Backend service exposing REST endpoints over HTTPS/JSON")
  ContainerDb(DB, "Database", "PostgreSQL", "Stores user profiles, tasks (manual/imported), sync settings, sync history")
  Container(Connector, "MyCourses Connector", "Python", "Integration module that calls MyCourses web services, parses JSON, maps data into internal task records")
}

