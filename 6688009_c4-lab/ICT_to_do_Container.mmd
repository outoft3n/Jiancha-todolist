    System_Ext(mycourses, "MyCourses", "External ICT e-learning system that owns course, assignment, and submission data")
    
    Rel(student, web_app, "Uses to view and manage tasks")
    Rel(student, mobile_app, "Uses to view and manage tasks")
    Rel(instructor, web_app, "Uses to view tasks and monitor deadlines")
    Rel(admin, web_app, "Uses admin interface to manage system")
    
    Rel(web_app, web_api, "Makes REST API calls", "HTTPS/JSON")
    Rel(mobile_app, web_api, "Makes REST API calls", "HTTPS/JSON")
    Rel(web_api, database, "Reads and writes data", "SQL via ORM (SQLAlchemy)")
    Rel(web_api, connector, "Calls connector to sync assignments", "Direct function call or internal HTTP")
